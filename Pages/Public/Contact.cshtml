<!-- Contact Hero Styles -->
<style>
    @@keyframes gridMove {
        0% { transform: translate(0, 0); }
        100% { transform: translate(50px, 50px); }
    }
    
    .communication-icons {
        position: relative;
        width: 100%;
        height: 100%;
    }
    
    .comm-icon {
        position: absolute;
        font-size: 2rem;
        color: rgba(255, 255, 255, 0.1);
        animation: floatIcon 3s ease-in-out infinite;
    }
    
    .comm-icon-1 { top: 15%; left: 10%; animation-delay: 0s; }
    .comm-icon-2 { top: 25%; right: 15%; animation-delay: 1.2s; }
    .comm-icon-3 { bottom: 30%; left: 20%; animation-delay: 2.4s; }
    .comm-icon-4 { bottom: 15%; right: 25%; animation-delay: 3.6s; }
    .comm-icon-5 { top: 45%; left: 5%; animation-delay: 4.8s; }
    
    @@keyframes floatIcon {
        0%, 100% { transform: translateY(0px) scale(1); opacity: 0.3; }
        50% { transform: translateY(-15px) scale(1.1); opacity: 0.6; }
    }
    
    .contact-main-icon {
        position: relative;
    }
    
    .icon-container {
        position: relative;
        display: inline-block;
    }
    
    .icon-rings {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    
    .ring {
        position: absolute;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        animation: ripple 1.5s infinite;
    }
    
    .ring-1 { width: 80px; height: 80px; animation-delay: 0s; }
    .ring-2 { width: 120px; height: 120px; animation-delay: 1s; }
    .ring-3 { width: 160px; height: 160px; animation-delay: 2s; }
    
    @@keyframes ripple {
        0% { opacity: 0.8; transform: translate(-50%, -50%) scale(0.5); }
        100% { opacity: 0; transform: translate(-50%, -50%) scale(1.5); }
    }
    
    .contact-title-1 {
        animation: slideInFromLeft 0.6s ease-out;
    }
    
    .contact-title-2 {
        animation: slideInFromRight 0.6s ease-out 0.15s both;
    }
    
    @@keyframes slideInFromLeft {
        from { opacity: 0; transform: translateX(-100px); }
        to { opacity: 1; transform: translateX(0); }
    }
    
    @@keyframes slideInFromRight {
        from { opacity: 0; transform: translateX(100px); }
        to { opacity: 1; transform: translateX(0); }
    }
    
    .location-badge {
        display: inline-block;
        background: rgba(251, 191, 36, 0.2);
        border: 2px solid #fbbf24;
        color: #fbbf24;
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 600;
        animation: fadeInScale 0.6s ease-out 0.4s both;
    }
    
    @@keyframes fadeInScale {
        from { opacity: 0; transform: scale(0.8); }
        to { opacity: 1; transform: scale(1); }
    }
    
    .contact-subtitle {
        animation: fadeInUp 0.6s ease-out 0.5s both;
    }
    
    .quick-contact-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 30px 20px;
        text-align: center;
        transition: all 0.4s ease;
        animation: slideInUp 0.6s ease-out 0.7s both;
        height: 100%;
    }
    
    .quick-contact-card:hover {
        transform: translateY(-10px);
        background: rgba(255, 255, 255, 0.15);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }
    
    .contact-icon {
        font-size: 2.5rem;
        margin-bottom: 15px;
        color: #fbbf24;
    }
    
    .quick-contact-card h5 {
        color: white;
        font-weight: 600;
        margin-bottom: 10px;
    }
    
    .contact-info {
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 10px;
    }
    
    .availability {
        background: rgba(34, 197, 94, 0.2);
        color: #22c55e;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
    }
    
    .contact-btn-primary, .contact-btn-secondary {
        padding: 15px 35px;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
        animation: slideInUp 0.6s ease-out 0.9s both;
    }
    
    .contact-btn-primary {
        background: #ffffff;
        color: #059669;
        box-shadow: 0 5px 20px rgba(255, 255, 255, 0.3);
    }
    
    .contact-btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(255, 255, 255, 0.4);
        color: #059669;
    }
    
    .contact-btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-3px);
    }
    
    @@keyframes slideInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

