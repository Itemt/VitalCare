<script>
    // === PREVENIR REBOTE VISUAL DURANTE LA CARGA ===
    // Agregar clase preload al body para evitar transiciones durante la carga
    document.body.classList.add('preload');
    
    function removePreloadClasses() {
        document.body.classList.remove('preload');
        const navbar = document.querySelector('.navbar-preload');
        if (navbar) {
            navbar.classList.remove('navbar-preload');
        }
    }
    
    // Remover las clases preload después de que la página esté completamente cargada
    window.addEventListener('load', function() {
        setTimeout(removePreloadClasses, 100); // Pequeño delay para asegurar que todo esté renderizado
    });
    
    // También remover en caso de que DOMContentLoaded se ejecute primero
    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(removePreloadClasses, 50);
    });
    
    // Fallback adicional con timer
    setTimeout(removePreloadClasses, 500);
    
    // Prevenir flash durante navegación
    document.addEventListener('beforeunload', function() {
        document.body.classList.add('preload');
        const navbar = document.querySelector('.navbar');
        if (navbar) {
            navbar.classList.add('navbar-preload');
        }
    });
</script> 