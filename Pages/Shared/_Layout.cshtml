    <script>
        // NAVBAR RESPONSIVO INTELIGENTE - MEJORADO
        document.addEventListener('DOMContentLoaded', function() {
            function adjustNavbarResponsively() {
                const navbarNav = document.querySelector('.navbar-nav.me-auto');
                const moreDropdown = document.getElementById('moreOptionsDropdown');
                const rightSide = document.querySelector('.d-flex.align-items-center');
                const navbar = document.querySelector('.navbar .container-fluid');
                
                if (!navbarNav || !moreDropdown || !navbar) return;
                
                // Solo aplicar en pantallas grandes (donde el navbar está expandido)
                if (window.innerWidth < 992) {
                    moreDropdown.style.display = 'none';
                    return;
                }
                
                const navbarWidth = navbar.offsetWidth;
                const brandWidth = document.querySelector('.navbar-brand')?.offsetWidth || 200;
                const rightSideWidth = rightSide?.offsetWidth || 250;
                const availableWidth = navbarWidth - brandWidth - rightSideWidth - 100; // 100px margen de seguridad
                
                // Obtener todos los items principales (excluyendo dropdowns móviles)
                const mainNavItems = navbarNav.querySelectorAll('.nav-item:not(.dropdown.d-lg-none)');
                let currentWidth = 0;
                let itemsToHide = [];
                
                // Calcular qué items caben
                mainNavItems.forEach((item, index) => {
                    if (item.id === 'moreOptionsDropdown') return; // Saltar el dropdown "Más"
                    
                    const itemWidth = item.offsetWidth + 10; // 10px margen entre items
                    
                    if (currentWidth + itemWidth + 120 < availableWidth) { // 120px reservado para "Más"
                        item.style.display = '';
                        currentWidth += itemWidth;
                    } else {
                        item.style.display = 'none';
                        itemsToHide.push(item);
                    }
                });
                
                // Mostrar/ocultar dropdown "Más" según necesidad
                if (itemsToHide.length > 0) {
                    moreDropdown.style.display = 'block';
                } else {
                    moreDropdown.style.display = 'none';
                }
            }
            
            // Función de debounce para optimizar rendimiento
            function debounce(func, wait) {
                let timeout;
                return function executedFunction(...args) {
                    const later = () => {
                        clearTimeout(timeout);
                        func(...args);
                    };
                    clearTimeout(timeout);
                    timeout = setTimeout(later, wait);
                };
            }
            
            // Ejecutar al cargar
            setTimeout(adjustNavbarResponsively, 100);
            
            // Ejecutar al redimensionar (con debounce para rendimiento)
            window.addEventListener('resize', debounce(adjustNavbarResponsively, 150));
            
            // Ejecutar cuando cambie el estado del navbar collapse
            const navbarCollapse = document.getElementById('navbarSupportedContent');
            if (navbarCollapse) {
                navbarCollapse.addEventListener('shown.bs.collapse', adjustNavbarResponsively);
                navbarCollapse.addEventListener('hidden.bs.collapse', adjustNavbarResponsively);
            }
            
            // Ejecutar cuando se complete la carga de fuentes (puede afectar el ancho)
            document.fonts.ready.then(adjustNavbarResponsively);
        });
    </script>
