        @@media (max-width: 991.98px) {
            #moreOptionsDropdown {
                display: none !important;
            }
        }
        
        /* En pantallas grandes, el JavaScript controlará la visibilidad */
        @@media (min-width: 992px) {
            #moreOptionsDropdown {
                display: none; /* Por defecto oculto, el JS lo mostrará si es necesario */
            }
            
