        }

        .feature-sparkles {
            position: absolute !important;
            top: 0 !important;
            left: 0 !important;
            right: 0 !important;
            bottom: 0 !important;
            pointer-events: none !important;
        }

        .sparkle {
            position: absolute !important;
            background: #ffd700 !important;
            border-radius: 50% !important;
            opacity: 0 !important;
            animation: sparkleAnimation 2s infinite !important;
        }

        .sparkle-1 {
            width: 4px !important;
            height: 4px !important;
            top: 10% !important;
            left: 20% !important;
            animation-delay: 0s !important;
        }

        .sparkle-2 {
            width: 3px !important;
            height: 3px !important;
            top: 80% !important;
            right: 15% !important;
            animation-delay: 0.5s !important;
        }

        .sparkle-3 {
            width: 5px !important;
            height: 5px !important;
            bottom: 20% !important;
            left: 80% !important;
            animation-delay: 1s !important;
        }

        .sparkle-4 {
            width: 2px !important;
            height: 2px !important;
            top: 30% !important;
            right: 30% !important;
            animation-delay: 1.5s !important;
        }

        @@keyframes sparkleAnimation {
            0%, 100% { opacity: 0; transform: scale(0); }
            50% { opacity: 1; transform: scale(1); }
        }

        .feature-card-hover:hover .sparkle {
            animation-play-state: running !important;
        }

