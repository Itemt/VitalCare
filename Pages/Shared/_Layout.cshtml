    @* THEME SCRIPT + DETECTOR DE FUENTES CARGADAS *@
    <script>
        (function() {
            const theme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-bs-theme', theme);
            // Agregar clases preload inmediatamente
            document.documentElement.classList.add('preload');
            
            // DETECTOR DE FUENTES WEB - Evitar FOUT
            function detectFontsLoaded() {
                const html = document.documentElement;
                
                // Si las fuentes web están disponibles
                if (document.fonts && document.fonts.ready) {
                    document.fonts.ready.then(function() {
                        html.classList.add('fonts-loaded');
                    });
                } else {
                    // Fallback: esperar un poco y asumir que están cargadas
                    setTimeout(function() {
                        html.classList.add('fonts-loaded');
                    }, 100);
                }
                
                // Fallback adicional para asegurar que siempre se muestre
                setTimeout(function() {
                    html.classList.add('fonts-loaded');
                }, 500);
            }
            
            detectFontsLoaded();
        })();
    </script>
    
