            .nav-item:not(.dropdown.d-lg-none):not(#moreOptionsDropdown) {
                display: block !important;
            }
            
            /* Estilos para items dinámicos en el menú "Más" */
            .dynamic-nav-item .dropdown-item {
                font-weight: 500 !important;
                color: #495057 !important;
            }
            
            .dynamic-nav-item .dropdown-item:hover {
                background: rgba(0, 123, 255, 0.1) !important;
                color: #0056b3 !important;
            }
        }
        
        /* Asegurar que los items principales estén visibles por defecto en pantallas grandes */
        @@media (min-width: 992px) {
            .nav-item-important {
                display: block !important;
            }
        }
        
        /* Optimizaciones para el cálculo de ancho */
        .navbar-nav .nav-item {
            white-space: nowrap; /* Evitar que el texto se divida */
        }
        
        .navbar-nav .nav-link {
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }
        
        /* Transiciones suaves para elementos del lado derecho */
        .d-flex.align-items-center a,
        .d-flex.align-items-center button {
            transition: all 0.3s ease;
        }
        
        .d-flex.align-items-center a span,
        .d-flex.align-items-center button span {
            transition: opacity 0.3s ease;
        }
        
        /* Estilos para botones simplificados */
        .btn-sm {
            font-size: 0.8rem !important;
            padding: 0.375rem 0.5rem !important;
        }
        
        /* Mejor handling del overflow en el navbar */
        .navbar .container-fluid {
            overflow: visible;
        }
        
        /* Asegurar que los elementos no se corten abruptamente */
        .navbar-nav,
        .d-flex.align-items-center {
            flex-shrink: 1;
            min-width: 0;
        }
        
        /* Indicador visual para debugging en desarrollo */
        .dev-highlight {
            outline: 2px solid red !important;
        }
        
        /* Indicador de overflow para debugging */
        .navbar-debug-overflow {
            background: rgba(255, 0, 0, 0.1) !important;
            border: 1px solid red !important;
        }
    </style>
</head>
