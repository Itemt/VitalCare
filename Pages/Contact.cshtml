<!-- Contact Form -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow-lg border-0">
                    <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #003366, #002244);">
                        <h3 class="fw-bold mb-0">
                            <i class="bi bi-envelope-paper-fill me-2"></i>
                            Formulario de Contacto
                        </h3>
                        <p class="mb-0 text-white-50">Completa el formulario y nos comunicaremos contigo</p>
                    </div>
                    <div class="card-body p-5">
                        <form>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="firstName" class="form-label fw-semibold">
                                        <i class="bi bi-person-fill me-1" style="color: #003366;"></i>Nombre
                                    </label>
                                    <input type="text" class="form-control form-control-lg" id="firstName" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="lastName" class="form-label fw-semibold">
                                        <i class="bi bi-person-fill me-1" style="color: #003366;"></i>Apellido
                                    </label>
                                    <input type="text" class="form-control form-control-lg" id="lastName" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label fw-semibold">
                                        <i class="bi bi-envelope-fill me-1" style="color: #003366;"></i>Correo Electrónico
                                    </label>
                                    <input type="email" class="form-control form-control-lg" id="email" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="phone" class="form-label fw-semibold">
                                        <i class="bi bi-telephone-fill me-1" style="color: #003366;"></i>Teléfono
                                    </label>
                                    <input type="tel" class="form-control form-control-lg" id="phone">
                                </div>
                                <div class="col-12">
                                    <label for="subject" class="form-label fw-semibold">
                                        <i class="bi bi-tag-fill me-1" style="color: #003366;"></i>Asunto
                                    </label>
                                    <select class="form-select form-select-lg" id="subject" required>
                                        <option value="">Selecciona un asunto</option>
                                        <option value="consulta">Consulta General</option>
                                        <option value="soporte">Soporte Técnico</option>
                                        <option value="cita">Agendar Cita</option>
                                        <option value="emergencia">Emergencia Médica</option>
                                        <option value="facturacion">Facturación</option>
                                        <option value="otro">Otro</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="message" class="form-label fw-semibold">
                                        <i class="bi bi-chat-square-text-fill me-1" style="color: #003366;"></i>Mensaje
                                    </label>
                                    <textarea class="form-control" id="message" rows="5" placeholder="Describe tu consulta o solicitud..." required></textarea>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="privacy" required>
                                        <label class="form-check-label" for="privacy">
                                            Acepto la <a href="#" style="color: #003366;">política de privacidad</a> y el tratamiento de mis datos personales
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12 text-center">
                                    <button type="submit" class="btn btn-lg px-5" style="background: linear-gradient(135deg, #003366, #002244); color: white;">
                                        <i class="bi bi-send-fill me-2"></i>Enviar Mensaje
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

