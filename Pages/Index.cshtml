@page
@model IndexModel
@using Microsoft.AspNetCore.Identity
@using CitasEPS.Models
@inject SignInManager<User> UserManagerAccessor
@inject UserManager<User> AspNetUserManager

@{
    ViewData["Title"] = "Inicio - VitalCare";
    var currentUser = await AspNetUserManager.GetUserAsync(User);
    var userFirstName = currentUser?.FirstName;
    var isDoctor = User.IsInRole("Doctor");
    var isPatient = User.IsInRole("Paciente");
    var isLoggedIn = UserManagerAccessor.IsSignedIn(User);
}

@if (!isLoggedIn)
{
    <!-- Enhanced Hero Section - Solo para usuarios no logueados -->
    <div class="container-fluid bg-dark text-white text-center py-5 mb-4 shadow-lg hero-section-enhanced" style="background-image: linear-gradient(135deg, rgba(0,20,40,0.95), rgba(0,40,80,0.9)), url('/images/INDEX.png'); background-size: cover; background-position: center center; background-attachment: fixed; position: relative; overflow: hidden; border-radius: 2rem; margin: 1rem;">
        
        <!-- Floating Icons - Optimized Performance -->
        <div class="floating-medical-icons">
            <i class="bi bi-heart-pulse floating-icon icon-1"></i>
            <i class="bi bi-shield-check floating-icon icon-2"></i>
            <i class="bi bi-calendar-plus floating-icon icon-3"></i>
            <i class="bi bi-graph-up floating-icon icon-4"></i>
            <i class="bi bi-people floating-icon icon-5"></i>
            <i class="bi bi-clock floating-icon icon-6"></i>
        </div>
        
        <!-- Hero Content Container -->
        <div class="hero-content-container mx-auto d-flex flex-column justify-content-center align-items-center" style="background: linear-gradient(135deg, rgba(0, 40, 80, 0.9), rgba(0, 60, 120, 0.85)); padding: 3rem 1.5rem; border-radius: 1.5rem; max-width: 1000px; width: 90%; position: relative; z-index: 10; backdrop-filter: blur(20px); border: 1px solid rgba(255,255,255,0.1);">
            <!-- Glowing Border Effect - Only on Hover -->
            <div class="hero-glow-border"></div>
            
            <h1 class="display-2 fw-bolder text-shadow-custom mb-3 hero-title text-center">
                <span class="hero-title-vital" style="color: #22c55e;">Vital</span><span class="hero-title-care" style="color: #0f172a;">Care</span>
            </h1>
            
            <p class="lead fs-4 mb-4 text-shadow-custom hero-subtitle text-center">Su salud es nuestra prioridad. Experimente la <span class="hero-highlight-text">medicina del futuro</span> con tecnología de vanguardia.</p>
            
            <!-- Enhanced Stats Row - Individual Cards -->
            <div class="row g-3 mb-4 hero-stats w-100 justify-content-center">
                <div class="col-md-4 col-lg-3">
                    <div class="hero-stat-card text-center">
                        <div class="hero-stat-icon">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <div class="hero-stat-number fs-3 fw-bold" data-target="25000">0</div>
                        <div class="hero-stat-label small">Pacientes Confiaron</div>
                    </div>
                </div>
                <div class="col-md-4 col-lg-3">
                    <div class="hero-stat-card text-center">
                        <div class="hero-stat-icon">
                            <i class="bi bi-hospital"></i>
                        </div>
                        <div class="hero-stat-number fs-3 fw-bold" data-target="350">0</div>
                        <div class="hero-stat-label small">Especialistas</div>
                    </div>
                </div>
                <div class="col-md-4 col-lg-3">
                    <div class="hero-stat-card text-center">
                        <div class="hero-stat-icon">
                            <i class="bi bi-star-fill"></i>
                        </div>
                        <div class="hero-stat-number fs-3 fw-bold" data-target="98">0</div>
                        <div class="hero-stat-label small">% Satisfacción</div>
                    </div>
                </div>
            </div>
            
            <!-- Enhanced Action Buttons -->
            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                <a class="btn btn-light btn-lg px-4 py-2 me-sm-3 hero-btn hero-btn-light" asp-area="Identity" asp-page="/Account/Login" role="button">
                    <i class="bi bi-box-arrow-in-right me-2"></i> 
                    <span>Iniciar Sesión</span>
                    <div class="btn-ripple"></div>
                </a>
                <a class="btn btn-dark-blue btn-lg px-4 py-2 hero-btn hero-btn-dark" asp-area="Identity" asp-page="/Account/Register" role="button">
                    <i class="bi bi-person-plus me-2"></i> 
                    <span>Registrarse Gratis</span>
                    <div class="btn-ripple"></div>
                </a>
            </div>
            
            <!-- Divider Line after buttons -->
            <hr style="border: 0.5px solid white; width: 60%; margin: 30px auto;">
            
            <!-- Trust Badges - Individual Cards with Icons -->
            <div class="row g-3 mt-3 justify-content-center">
                <div class="col-md-4 col-lg-3">
                    <div class="trust-badge-item">
                        <i class="bi bi-award-fill me-2"></i>
                        <span>ISO 27001</span>
                    </div>
                </div>
                <div class="col-md-4 col-lg-3">
                    <div class="trust-badge-item">
                        <i class="bi bi-shield-fill-check me-2"></i>
                        <span>HIPAA Compliant</span>
                    </div>
                </div>
                <div class="col-md-4 col-lg-3">
                    <div class="trust-badge-item">
                        <i class="bi bi-patch-check-fill me-2"></i>
                        <span>SSL Secured</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Scroll Indicator - Positioned Lower -->
        <div class="scroll-indicator" style="bottom: 15px;">
            <i class="bi bi-chevron-down"></i>
        </div>
    </div>
}
else if (isDoctor)
{
    <!-- Hero para Doctor con Imagen -->
    <div class="container-fluid text-center py-4 mb-4">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6">
                <div class="doctor-welcome-content">
                    <h2 class="welcome-title mb-3 text-dark">
                        <i class="bi bi-clipboard-pulse me-2 text-primary"></i>
                        @if (!string.IsNullOrEmpty(userFirstName))
                        {
                            <span>Bienvenido Dr(a). <strong>@userFirstName</strong></span>
                        }
                        else
                        {
                            <span>Portal Médico</span>
                        }
                    </h2>
                    <p class="welcome-subtitle text-muted">Gestione su agenda, consulte pacientes y acceda a su panel profesional</p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="doctor-image-container">
                    <img src="~/images/doctor.png" alt="Portal Médico" class="img-fluid rounded-3 shadow-lg" style="max-height: 300px; width: auto;">
                </div>
            </div>
        </div>
    </div>
}
else if (isPatient)
{
    <!-- Hero para Paciente con Imagen -->
    <div class="container-fluid text-center py-4 mb-4">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6">
                <div class="patient-welcome-content">
                    <h2 class="welcome-title mb-3 text-dark">
                        <i class="bi bi-person-heart me-2 text-success"></i>
                        @if (!string.IsNullOrEmpty(userFirstName))
                        {
                            <span>Bienvenido <strong>@userFirstName</strong></span>
                        }
                        else
                        {
                            <span>Portal del Paciente</span>
                        }
                    </h2>
                    <p class="welcome-subtitle text-muted">Aquí puede gestionar sus citas y consultar su información médica</p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="patient-image-container">
                    <img src="~/images/Pacientes.png" alt="Portal del Paciente" class="img-fluid rounded-3 shadow-lg" style="max-height: 300px; width: auto;">
                </div>
            </div>
        </div>
    </div>
}

