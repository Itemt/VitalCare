@page
@model IndexModel
@using Microsoft.AspNetCore.Identity
@using CitasEPS.Models
@inject SignInManager<User> UserManagerAccessor
@inject UserManager<User> AspNetUserManager

@{
    ViewData["Title"] = "Inicio - VitalCare";
    var currentUser = await AspNetUserManager.GetUserAsync(User);
    var userFirstName = currentUser?.FirstName;
    var isDoctor = User.IsInRole("Doctor");
}

<!-- Hero Section -->
<div class="container-fluid bg-dark text-white text-center py-5 mb-4 shadow-lg" style="background-image: url('/images/hero-background.svg'); background-size: cover; background-position: center center;">
    <div style="background-color: rgba(0, 20, 40, 0.75); padding: 4rem 1.5rem; display: inline-block; border-radius: .5rem; max-width: 90%; width: 700px;">
        <h1 class="display-3 fw-bolder text-shadow-custom">Bienvenido a VitalCare</h1>
        @if (UserManagerAccessor.IsSignedIn(User) && !string.IsNullOrEmpty(userFirstName))
        {
            if (isDoctor)
            {
                <p class="lead fs-3 mb-4 text-shadow-custom">Hola Dr(a). <span class="fw-semibold">@userFirstName</span>, ¿listo para gestionar la salud de sus pacientes?</p>
            }
            else
            {
                <p class="lead fs-3 mb-4 text-shadow-custom">Hola <span class="fw-semibold">@userFirstName</span>, ¿listo para gestionar tu salud?</p>
            }
        }
        else
        {
            <p class="lead fs-4 mb-4 text-shadow-custom">Su salud es nuestra prioridad. Agende y gestione sus citas médicas de forma fácil y rápida.</p>
        }
        <hr class="my-4 border-light opacity-50">
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            @if (UserManagerAccessor.IsSignedIn(User))
            {
                if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-primary btn-lg px-4 gap-3" href="#adminPanelDashboard" role="button"><i class="bi bi-speedometer2"></i> Ir al Panel Admin</a>
                }
                else if (User.IsInRole("Paciente"))
                {
                    <a class="btn btn-success btn-lg px-4 gap-3" href="#patientPanelDashboard" role="button"><i class="bi bi-person-vcard"></i> Mi Portal Paciente</a>
                }
                else if (User.IsInRole("Doctor"))
                {
                    <a class="btn btn-info btn-lg px-4 gap-3" href="#doctorPanelDashboard" role="button"><i class="bi bi-clipboard-pulse"></i> Mi Portal Médico</a>
                }
                else
                {
                    <p class="text-light">Bienvenido. Explore nuestros servicios.</p> @* Simplified fallback message in hero *@
                }
            }
            else
            {
                <a class="btn btn-light btn-lg px-4 gap-3 me-sm-3" asp-area="Identity" asp-page="/Account/Login" role="button"><i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión</a>
                <a class="btn btn-outline-light btn-lg px-4" asp-area="Identity" asp-page="/Account/Register" role="button"><i class="bi bi-person-plus"></i> Registrarse</a>
            }
        </div>
    </div>
</div>

<!-- Main Content Section - Dynamic based on Role -->
<div class="container mt-5 py-2">
    @if (UserManagerAccessor.IsSignedIn(User))
    {
        @if (User.IsInRole("Admin"))
        {
            <div id="adminPanelDashboard" class="row justify-content-center admin-dashboard-bg">
                <div class="col-lg-10 col-xl-9">
                    <div class="card shadow-lg">
                        <div class="card-header bg-primary text-white text-center">
                            <h2 class="my-2"><i class="bi bi-person-gear"></i> Panel de Administración</h2>
                        </div>
                        <div class="card-body p-4">
                            <p class="lead text-center mb-4">Gestione las entidades clave y configuraciones del sistema.</p>
                            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                                <div class="col">
                                    <div class="card h-100 shadow-sm border-primary">
                                        <div class="card-body d-flex flex-column align-items-center">
                                            <i class="bi bi-people-fill fs-1 text-primary mb-3"></i>
                                            <h5 class="card-title">Usuarios</h5>
                                            <p class="card-text flex-grow-1">Administrar cuentas de todos los usuarios.</p>
                                            <a asp-page="/Admin/ManageUsers" class="btn btn-primary mt-auto w-100"><i class="bi bi-arrow-right-circle"></i> Ir</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card h-100 shadow-sm border-primary">
                                        <div class="card-body d-flex flex-column align-items-center">
                                            <i class="bi bi-calendar-check-fill fs-1 text-primary mb-3"></i>
                                            <h5 class="card-title">Citas</h5>
                                            <p class="card-text flex-grow-1">Ver y administrar todas las citas.</p>
                                            <a asp-page="/Admin/ManageAppointments" class="btn btn-primary mt-auto w-100"><i class="bi bi-arrow-right-circle"></i> Ir</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card h-100 shadow-sm border-primary">
                                        <div class="card-body d-flex flex-column align-items-center">
                                            <i class="bi bi-file-medical-fill fs-1 text-primary mb-3"></i>
                                            <h5 class="card-title">Médicos</h5>
                                            <p class="card-text flex-grow-1">Gestionar perfiles de médicos.</p>
                                            <a asp-page="/Admin/ManageDoctors" class="btn btn-primary mt-auto w-100"><i class="bi bi-arrow-right-circle"></i> Ir</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card h-100 shadow-sm border-primary">
                                        <div class="card-body d-flex flex-column align-items-center">
                                            <i class="bi bi-bookmark-star-fill fs-1 text-primary mb-3"></i>
                                            <h5 class="card-title">Especialidades</h5>
                                            <p class="card-text flex-grow-1">Añadir o editar especialidades.</p>
                                            <a asp-page="/Admin/ManageSpecialties" class="btn btn-primary mt-auto w-100"><i class="bi bi-arrow-right-circle"></i> Ir</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card h-100 shadow-sm border-primary">
                                        <div class="card-body d-flex flex-column align-items-center">
                                            <i class="bi bi-capsule-pill fs-1 text-primary mb-3"></i>
                                            <h5 class="card-title">Medicamentos</h5>
                                            <p class="card-text flex-grow-1">Gestionar listado de medicamentos.</p>
                                            <a asp-page="/Admin/Medications/Index" class="btn btn-primary mt-auto w-100"><i class="bi bi-arrow-right-circle"></i> Ir</a>
                                        </div>
                                    </div>
                                </div>
                                 <div class="col">
                                    <div class="card h-100 shadow-sm border-secondary">
                                        <div class="card-body d-flex flex-column align-items-center">
                                            <i class="bi bi-person-lines-fill fs-1 text-secondary mb-3"></i>
                                            <h5 class="card-title">Pacientes</h5>
                                            <p class="card-text flex-grow-1">Administrar información de pacientes.</p>
                                            <a asp-page="/Admin/ManagePatients" class="btn btn-outline-secondary mt-auto w-100"><i class="bi bi-arrow-right-circle"></i> Ir</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-light text-center">
                            <p class="mb-0 text-muted small">Panel de Control Administrativo</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (User.IsInRole("Doctor"))
        {
            <div id="doctorPanelDashboard" class="row justify-content-center doctor-dashboard-bg">
                <div class="col-lg-10 col-xl-9">
                    <div class="card shadow-lg">
                        <div class="card-header bg-info text-white text-center text-shadow-custom">
                            <h2 class="my-2"><i class="bi bi-clipboard-pulse"></i> Portal Médico</h2>
                        </div>
                        <div class="card-body p-4">
                            @if (!string.IsNullOrEmpty(userFirstName))
                            {
                                <p class="lead text-center mb-4">Bienvenido Dr(a). <span class="fw-semibold">@userFirstName</span>. Acceda a su agenda y gestione pacientes.</p>
                            } else {
                                <p class="lead text-center mb-4">Acceda a su agenda y gestione pacientes.</p>
                            }

                            <!-- Quick Stats Row -->
                            <div class="row g-3 mb-4 text-center">
                                <div class="col-md-4">
                                    <div class="stat-card p-3 border border-info-subtle rounded bg-info-subtle">
                                        <h5 class="stat-value mb-1 fs-2 fw-bold text-info text-shadow-custom" id="doctorCitasHoyStat">5</h5>
                                        <p class="stat-label mb-0 text-muted small text-uppercase">Citas Hoy</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="stat-card p-3 border border-warning-subtle rounded bg-warning-subtle">
                                        <h5 class="stat-value mb-1 fs-2 fw-bold text-warning text-shadow-custom">2</h5>
                                        <p class="stat-label mb-0 text-muted small text-uppercase">Resultados Pendientes</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="stat-card p-3 border border-success-subtle rounded bg-success-subtle">
                                        <h5 class="stat-value mb-1 fs-2 fw-bold text-success text-shadow-custom">87%</h5>
                                        <p class="stat-label mb-0 text-muted small text-uppercase">Satisfacción</p>
                                    </div>
                                </div>
                            </div>
                            <!-- End Quick Stats Row -->

                            <hr class="my-4">

                            <h4 class="mb-3 text-center fw-normal text-info-emphasis">Acciones Principales</h4>
                            <div class="row justify-content-center text-center g-4 mb-4">
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm border-info action-card-hover">
                                        <div class="card-body d-flex flex-column align-items-center p-4">
                                            <i class="bi bi-calendar-week-fill fs-1 text-info mb-3"></i>
                                            <h5 class="card-title">Mi Agenda</h5>
                                            <p class="card-text flex-grow-1 small text-muted">Vea sus citas, detalles y añada prescripciones.</p>
                                            <a asp-page="/Doctor/Agenda" class="btn btn-info mt-auto w-100 fw-semibold"><i class="bi bi-arrow-right-circle me-1"></i> Ver Agenda</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm border-info action-card-hover">
                                        <div class="card-body d-flex flex-column align-items-center p-4">
                                            <i class="bi bi-people-fill fs-1 text-info mb-3"></i>
                                            <h5 class="card-title">Mis Pacientes</h5>
                                            <p class="card-text flex-grow-1 small text-muted">Consulte pacientes atendidos y vea su historial.</p>
                                            <a asp-page="/Doctor/Patients" class="btn btn-info mt-auto w-100 fw-semibold"><i class="bi bi-list-check me-1"></i> Ver Pacientes</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm border-info action-card-hover">
                                        <div class="card-body d-flex flex-column align-items-center p-4">
                                            <i class="bi bi-person-fill-gear fs-1 text-info mb-3"></i>
                                            <h5 class="card-title">Mi Perfil</h5>
                                            <p class="card-text flex-grow-1 small text-muted">Actualice su información profesional.</p>
                                            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-outline-info mt-auto w-100 fw-semibold"><i class="bi bi-pencil-square me-1"></i> Actualizar Perfil</a>
                                        </div>
                                    </div>
                                </div>
                                @* Add more Doctor specific cards here if needed *@
                            </div>

                            <hr class="my-4">

                            <div class="row g-4">
                                <div class="col-lg-6">
                                    <h5 class="mb-3 text-info-emphasis"><i class="bi bi-tools me-2"></i>Herramientas Rápidas</h5>
                                    <div class="list-group shadow-sm quick-links-widget">
                                        <div class="list-group-item p-0">
                                            <form id="doctorPatientSearchForm" class="d-flex p-2">
                                                <input type="text" id="doctorPatientSearchInput" class="form-control form-control-sm me-2" placeholder="Buscar Paciente...">
                                                <button type="submit" class="btn btn-sm btn-outline-info"><i class="bi bi-search"></i></button>
                                            </form>
                                        </div>
                                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                            Configurar Notificaciones
                                            <i class="bi bi-bell-slash text-muted"></i>
                                        </a>
                                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                            Base de Conocimiento Médico
                                            <i class="bi bi-book text-muted"></i>
                                        </a>
                                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                            Ver Estadísticas Completas
                                            <i class="bi bi-graph-up text-muted"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <h5 class="mb-3 text-info-emphasis"><i class="bi bi-newspaper me-2"></i>Novedades y Anuncios</h5>
                                    <div class="card shadow-sm announcements-widget">
                                        <div class="card-body">
                                            <p class="card-text text-muted small">
                                                <strong>15 Julio, 2024:</strong> Nueva actualización del sistema de agendamiento. Revise el manual actualizado.
                                            </p>
                                            <hr class="my-2">
                                            <p class="card-text text-muted small">
                                                <strong>10 Julio, 2024:</strong> Próxima jornada de capacitación sobre CIE-11 el 1 de Agosto. ¡Inscríbase!
                                            </p>
                                            <a href="#" class="btn btn-sm btn-outline-info mt-2 float-end">Ver todos</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="card-footer bg-light text-center">
                            <p class="mb-0 text-muted small">Herramientas para Profesionales de la Salud</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (User.IsInRole("Paciente"))
        {
            <div id="patientPanelDashboard" class="row justify-content-center patient-dashboard-bg">
                <div class="col-lg-10 col-xl-9">
                    <div class="card shadow-lg">
                        <div class="card-header bg-success text-white text-center text-shadow-custom">
                            <h2 class="my-2"><i class="bi bi-person-vcard"></i> Portal del Paciente</h2>
                        </div>
                        <div class="card-body p-4">
                            @if (!string.IsNullOrEmpty(userFirstName))
                            {
                                <p class="lead text-center mb-4">Bienvenido de nuevo, <span class="fw-semibold">@userFirstName</span>. Aquí puedes gestionar tus citas y ver tu información médica.</p>
                            } else {
                                <p class="lead text-center mb-4">Bienvenido al portal de pacientes. Aquí puedes gestionar tus citas y ver tu información médica.</p>
                            }

                            <!-- Quick Overview Row -->
                            <div class="row g-3 mb-4 text-center">
                                <div class="col-md-6">
                                    <div class="stat-card p-3 border border-primary-subtle rounded bg-primary-subtle">
                                        <h5 class="stat-value mb-1 fs-4 fw-semibold text-primary-emphasis" id="patientProximaCitaStat">25 Jul, 10:00 AM</h5>
                                        <p class="stat-label mb-0 text-muted small text-uppercase">Próxima Cita</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="stat-card p-3 border border-danger-subtle rounded bg-danger-subtle">
                                        <h5 class="stat-value mb-1 fs-2 fw-bold text-danger-emphasis" id="patientNuevasRecetasStat">3</h5>
                                        <p class="stat-label mb-0 text-muted small text-uppercase">Recetas Nuevas</p>
                                    </div>
                                </div>
                            </div>
                            <!-- End Quick Overview Row -->

                            <hr class="my-4">

                            <h4 class="mb-3 text-center fw-normal text-success-emphasis">Tu Espacio Personal</h4>
                            <div class="row justify-content-center text-center g-4 mb-4">
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm border-success action-card-hover">
                                        <div class="card-body d-flex flex-column align-items-center p-4">
                                            <i class="bi bi-calendar-plus-fill fs-1 text-success mb-3"></i>
                                            <h5 class="card-title">Agendar Nueva Cita</h5>
                                            <p class="card-text flex-grow-1 small text-muted">Busque disponibilidad y programe una nueva consulta médica.</p>
                                            <a asp-page="/Appointments/Create" class="btn btn-success mt-auto w-100 fw-semibold"><i class="bi bi-arrow-right-circle me-1"></i> Agendar Ahora</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm border-success action-card-hover">
                                        <div class="card-body d-flex flex-column align-items-center p-4">
                                            <i class="bi bi-calendar-check-fill fs-1 text-success mb-3"></i>
                                            <h5 class="card-title">Mis Citas</h5>
                                            <p class="card-text flex-grow-1 small text-muted">Vea sus próximas citas, detalles, y gestione sus solicitudes.</p>
                                            <a asp-page="/Appointments/Index" class="btn btn-success mt-auto w-100 fw-semibold"><i class="bi bi-list-check me-1"></i> Ver Mis Citas</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm border-success action-card-hover">
                                        <div class="card-body d-flex flex-column align-items-center p-4">
                                            <i class="bi bi-journal-medical fs-1 text-success mb-3"></i>
                                            <h5 class="card-title">Mis Recetas</h5>
                                            <p class="card-text flex-grow-1 small text-muted">Consulte las recetas médicas emitidas por sus doctores.</p>
                                            <a asp-page="/Appointments/MyPrescriptions" class="btn btn-success mt-auto w-100 fw-semibold"><i class="bi bi-eye me-1"></i> Ver Mis Recetas</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm border-success action-card-hover">
                                        <div class="card-body d-flex flex-column align-items-center p-4">
                                            <i class="bi bi-person-fill-gear fs-1 text-success mb-3"></i>
                                            <h5 class="card-title">Mi Perfil</h5>
                                            <p class="card-text flex-grow-1 small text-muted">Actualice su información personal y de contacto.</p>
                                            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-outline-success mt-auto w-100 fw-semibold"><i class="bi bi-pencil-square me-1"></i> Actualizar Perfil</a>
                                        </div>
                                    </div>
                                </div>
                                @* Add more Patient specific cards here if needed *@
                            </div>

                            <hr class="my-4">

                            <div class="row g-4">
                                <div class="col-lg-6">
                                    <h5 class="mb-3 text-success-emphasis"><i class="bi bi-info-circle-fill me-2"></i>Información Útil</h5>
                                    <div class="list-group shadow-sm useful-info-widget">
                                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                            Preguntas Frecuentes (FAQ)
                                            <i class="bi bi-patch-question-fill text-muted"></i>
                                        </a>
                                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                            Guía del Paciente
                                            <i class="bi bi-book-half text-muted"></i>
                                        </a>
                                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                            Directorio Médico
                                            <i class="bi bi-person-rolodex text-muted"></i>
                                        </a>
                                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                            Políticas de Privacidad Detalladas
                                            <i class="bi bi-shield-shaded text-muted"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <h5 class="mb-3 text-success-emphasis"><i class="bi bi-bell-fill me-2"></i>Recordatorios y Novedades</h5>
                                    <div class="card shadow-sm reminders-widget">
                                        <div class="card-body">
                                            <p class="card-text text-muted small">
                                                <strong>Recordatorio:</strong> Su próxima revisión dental es el 05 de Agosto. No olvide confirmar.
                                            </p>
                                            <hr class="my-2">
                                            <p class="card-text text-muted small">
                                                <strong>Novedad:</strong> Nueva jornada de vacunación contra la influenza a partir del 20 de Julio.
                                            </p>
                                            <a href="#" class="btn btn-sm btn-outline-success mt-2 float-end">Ver más</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="card-footer bg-light text-center">
                             <p class="mb-0 text-muted small">VitalCare &copy; @DateTime.Now.Year</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
             // Fallback for logged-in users with undefined roles - GENERAL INFO CARDS
             <div class="row justify-content-center text-center g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm features-card">
                        <div class="card-body">
                            <div class="feature-icon-round bg-primary text-white mb-3 mx-auto">
                                <i class="bi bi-journal-medical fs-2"></i>
                            </div>
                            <h5 class="card-title">Especialistas Calificados</h5>
                            <p class="card-text">Acceda a una amplia red de médicos especialistas en diversas áreas de la salud.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm features-card">
                        <div class="card-body">
                            <div class="feature-icon-round bg-success text-white mb-3 mx-auto">
                                <i class="bi bi-calendar2-check fs-2"></i>
                            </div>
                            <h5 class="card-title">Gestión Fácil de Citas</h5>
                            <p class="card-text">Agende, reprograme o cancele sus citas médicas de manera intuitiva y rápida.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm features-card">
                        <div class="card-body">
                            <div class="feature-icon-round bg-info text-white mb-3 mx-auto">
                                <i class="bi bi-shield-lock fs-2"></i>
                            </div>
                            <h5 class="card-title">Seguridad y Confidencialidad</h5>
                            <p class="card-text">Sus datos de salud son tratados con la máxima seguridad y confidencialidad.</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else // This 'else' is for non-logged-in users
    {
        // Content for non-logged-in users - GENERAL INFO CARDS (Restored)
        <div class="row justify-content-center text-center g-4">
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm features-card">
                    <div class="card-body">
                        <div class="feature-icon-round bg-primary text-white mb-3 mx-auto">
                            <i class="bi bi-journal-medical fs-2"></i>
