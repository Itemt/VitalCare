@page
@model CitasEPS.Pages.Appointments.IndexModel

@{
    ViewData["Title"] = "Listado de Citas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Agendar Nueva Cita</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].AppointmentDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Doctor)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Doctor.Specialty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].IsConfirmed)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Appointment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.FullName)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Doctor.Specialty)
            </td>
            <td>
                 @(item.IsConfirmed ? "Confirmada" : "Pendiente")
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table> 