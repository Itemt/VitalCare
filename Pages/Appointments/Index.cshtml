@page
@model CitasEPS.Pages.Appointments.IndexModel

@{
    ViewData["Title"] = "Mis Citas";
}

<h1 class="text-primary"><i class="bi bi-calendar-check"></i> Mis Citas Médicas</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
else if (Model.Appointment == null || !Model.Appointment.Any())
{
    <div class="alert alert-info" role="alert">
        @if (Model.UserRole == "Paciente")
        {
            <p>No tienes citas programadas actualmente.</p>
        }
        else if (Model.UserRole == "Doctor")
        {
             <p>No tiene citas asignadas en su agenda.</p>
        }
        else
        {
            <p>No hay citas para mostrar.</p>
        }
    </div>
    <p>
        <a asp-page="Create" class="btn btn-primary"><i class="bi bi-calendar-plus"></i> Agendar Nueva Cita</a>
    </p>
}
else
{
    @if (Model.UserRole == "Paciente")
    {
        <p>Aquí están tus próximas citas:</p>
    }
     else if (Model.UserRole == "Doctor")
    {
         <p>Estas son las citas en su agenda:</p>
    }
    <p>
        <a asp-page="Create" class="btn btn-primary"><i class="bi bi-calendar-plus"></i> Agendar Nueva Cita</a>
    </p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="text-primary">Fecha y Hora</th>
                @if (Model.UserRole == "Paciente")
                {
                     <th class="text-primary">Médico</th>
                     <th class="text-primary">Especialidad</th>
                }
                else if (Model.UserRole == "Doctor")
                {
                    <th class="text-primary">Paciente</th>
                }
                 <th class="text-primary">Estado</th>
                <th class="text-primary">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Appointment)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AppointmentDateTime)</td>
                     @if (Model.UserRole == "Paciente")
                    {
                        <td>@Html.DisplayFor(modelItem => item.Doctor.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Doctor.Specialty.Name)</td>
                    }
                    else if (Model.UserRole == "Doctor")
                    {
                         <td>@Html.DisplayFor(modelItem => item.Patient.FullName)</td>
                    }
                    <td>
                        @if (item.IsCancelled)
                        {
                             <span class="badge bg-danger text-white">Cancelada</span>
                        }
                        else if (item.WasNoShow)
                        {
                            <span class="badge bg-danger text-white">No Presentó</span>
                        }
                        else if (item.IsCompleted)
                        {
                            <span class="badge bg-success text-white">Completada</span>
                        }
                        else if (item.AppointmentDateTime < DateTime.Now)
                        {
                            <span class="badge bg-secondary text-dark">Expirada</span>
                        }
                        else if (item.DoctorProposedReschedule && item.ProposedNewDateTime.HasValue)
                        {
                             <span class="badge bg-primary text-white">Propuesto por Doctor</span>
                        }
                        else if (item.RescheduleRequested && item.ProposedNewDateTime.HasValue)
                        {
                             <span class="badge bg-warning text-dark">Propuesto por Paciente</span>
                        }
                        else if (item.IsConfirmed)
                        {
                            <span class="badge bg-info text-white">Confirmada</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pendiente</span>
                        }
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="bi bi-eye"></i> Detalles</a>
                        
                        @if (Model.UserRole == "Doctor" && item.RescheduleRequested && item.ProposedNewDateTime.HasValue && !item.IsCompleted && item.AppointmentDateTime >= DateTime.Now && !item.IsCancelled)
                        {
                            <a asp-page="/Doctor/ConfirmRescheduleProposal" asp-route-id="@item.Id" class="btn btn-sm btn-success ms-1"><i class="bi bi-check-circle"></i> Revisar Propuesta</a>
                        }
                        else if (Model.UserRole == "Paciente" && item.DoctorProposedReschedule && item.ProposedNewDateTime.HasValue && !item.IsCompleted && !item.IsCancelled && item.AppointmentDateTime >= DateTime.Now)
                        {
                             <a asp-page="./ReviewDoctorProposal" asp-route-id="@item.Id" class="btn btn-sm btn-primary ms-1" title="Revisar propuesta de reagendamiento del doctor"><i class="bi bi-calendar-event"></i> Revisar Propuesta de Doctor</a>
                        }
                        else if (Model.UserRole == "Paciente" && !item.IsCompleted && item.AppointmentDateTime >= DateTime.Now && !item.RescheduleRequested && !item.DoctorProposedReschedule && !item.IsCancelled)
                        {
                             <a asp-page="./ProposeReschedule" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning ms-1" title="Proponer cambio de fecha/hora"><i class="bi bi-clock-history"></i> Proponer Reagendamiento</a>
                        }
                        @if (Model.UserRole == "Admin" && !item.IsCompleted && item.AppointmentDateTime >= DateTime.Now && !item.RescheduleRequested && !item.DoctorProposedReschedule && !item.IsCancelled)
                        {
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning ms-1"><i class="bi bi-pencil"></i> Editar</a>
                        }
                        
                        @* Cancel/Delete button - Now specific for Patient cancellation *@
                        @if (Model.UserRole == "Paciente" && !item.IsCompleted && !item.IsCancelled && item.AppointmentDateTime >= DateTime.Now) @* Eligibility for patient cancel *@
                        { 
                            <form method="post" asp-page-handler="CancelAppointment" asp-route-appointmentId="@item.Id" class="d-inline" 
                                  onsubmit="return confirm('¿Está seguro de que desea cancelar su cita? Esta acción no se puede deshacer.');">
                                <button type="submit" class="btn btn-danger btn-sm ms-1" title="Cancelar Cita">
                                    <i class="bi bi-x-lg"></i> Cancelar Cita
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
