@page
@model CitasEPS.Pages.UserDashboards.Admin.Specialties.CreateModel

@{ 
    ViewData["Title"] = "Crear Nueva Especialidad";
    Layout = "~/Pages/Shared/_Layout.cshtml"; 
}

<h1><i class="bi bi-plus-square-dotted"></i> @ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="Specialty.Name" class="control-label"></label>
                <input asp-for="Specialty.Name" class="form-control" />
                <span asp-validation-for="Specialty.Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                 <button type="submit" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear</button>
                <a asp-page="../ManageSpecialties" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
