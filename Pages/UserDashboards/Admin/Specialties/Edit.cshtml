@page "{id:int}"
@model CitasEPS.Pages.UserDashboards.Admin.Specialties.EditModel

@{ 
    ViewData["Title"] = "Editar Especialidad";
    Layout = "~/Pages/Shared/_Layout.cshtml"; 
}

<h1><i class="bi bi-pencil-fill"></i> @ViewData["Title"]</h1>
<h4>Especialidad ID: @Model.Specialty?.Id</h4>
<hr />

@if (Model.Specialty != null)
{
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Specialty.Id" />
                <div class="form-group mb-3">
                    <label asp-for="Specialty.Name" class="control-label"></label>
                    <input asp-for="Specialty.Name" class="form-control" />
                    <span asp-validation-for="Specialty.Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Guardar Cambios</button>
                    <a asp-page="../ManageSpecialties" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">No se encontr√≥ la especialidad especificada.</div>
    <a asp-page="../ManageSpecialties" class="btn btn-secondary">Volver a la Lista</a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
