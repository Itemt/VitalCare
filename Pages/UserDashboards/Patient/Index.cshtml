@page
@model CitasEPS.Pages.UserDashboards.Patient.PatientIndexModel
@using Microsoft.AspNetCore.Identity
@using CitasEPS.Models
@inject SignInManager<User> UserManagerAccessor
@inject UserManager<User> AspNetUserManager

@{
    ViewData["Title"] = "Portal del Paciente - VitalCare";
    var currentUser = await AspNetUserManager.GetUserAsync(User);
    var userFirstName = currentUser?.FirstName;
}

<!-- Compact Hero Section for Patient -->
<div class="container-fluid bg-gradient-primary text-white text-center py-4 mb-4" style="background: linear-gradient(135deg, #134e4a 0%, #065f46 50%, #064e3b 100%); border-radius: 0 0 1.5rem 1.5rem;">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-2">
                    <i class="bi bi-person-heart me-2"></i>
                    @if (!string.IsNullOrEmpty(userFirstName))
                    {
                        <span>Bienvenido, <strong>@userFirstName</strong></span>
                    }
                    else
                    {
                        <span>Portal del Paciente</span>
                    }
                </h1>
                <p class="lead mb-0 opacity-90">Su salud en sus manos - VitalCare IPS</p>
            </div>
        </div>
    </div>
</div>

<!-- Main Dashboard Content -->
<div class="container py-4" style="background-color: white;">
    
    <!-- Dynamic Health Status Row -->
    <div class="row g-4 mb-5">
        <!-- Next Appointment Card -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg" style="background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%); border-left: 5px solid #134e4a !important;">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="card-title text-dark fw-bold mb-2">
                                <i class="bi bi-calendar-event me-2" style="color: #134e4a;"></i>
                                Próxima Cita Médica
                            </h5>
                            <div id="nextAppointmentDetails">
                                <p class="mb-1 text-muted">Cargando información de su próxima cita...</p>
                            </div>
                        </div>
                        <div class="col-md-4 text-end">
                            <a asp-page="/Appointments/Create" class="btn btn-lg fw-bold text-white" style="background: #134e4a;">
                                <i class="bi bi-plus-circle me-2"></i>Nueva Cita
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-lg h-100" style="background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%); border-left: 5px solid #1e40af !important;">
                <div class="card-body p-4 text-center">
                    <h6 class="card-title text-dark fw-bold mb-3">Acciones Rápidas</h6>
                    <div class="d-grid gap-2">
                        <a asp-page="/Appointments/Index" class="btn btn-primary btn-sm">
                            <i class="bi bi-list-check me-1"></i>Ver Mis Citas
                        </a>
                        <a asp-page="/Appointments/MyPrescriptions" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-file-text me-1"></i>Mis Recetas
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Health Summary Row -->
    <div class="row g-4 mb-5">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);">
                <div class="card-body text-center p-4">
                    <div class="text-warning mb-3">
                        <i class="bi bi-prescription2 fs-1"></i>
                    </div>
                    <h6 class="card-title text-dark fw-bold">Recetas Activas</h6>
                    <h4 class="text-warning fw-bold" id="patientPrescriptionsCount">0</h4>
                    <p class="card-text text-muted small mb-0">medicamentos prescritos</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);">
                <div class="card-body text-center p-4">
                    <div class="text-purple mb-3" style="color: #7c3aed;">
                        <i class="bi bi-heart-pulse fs-1"></i>
                    </div>
                    <h6 class="card-title text-dark fw-bold">Estado de Salud</h6>
                    <span class="badge bg-success fs-6" id="healthStatus">Estable</span>
                    <p class="card-text text-muted small mb-0 mt-2">última consulta</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #fef2f2 0%, #fecaca 100%);">
                <div class="card-body text-center p-4">
                    <div class="text-danger mb-3">
                        <i class="bi bi-bell fs-1"></i>
                    </div>
                    <h6 class="card-title text-dark fw-bold">Recordatorios</h6>
                    <h4 class="text-danger fw-bold" id="activeRemindersCount">0</h4>
                    <p class="card-text text-muted small mb-0">pendientes</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Medical History & Profile Row -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-clipboard-data me-2" style="color: #134e4a;"></i>
                        Historial Médico Reciente
                    </h5>
                </div>
                <div class="card-body">
                    <div id="recentMedicalHistory">
                        <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <div>
                                <strong>Consulta General</strong>
                                <small class="text-muted d-block">Dr. María González</small>
                            </div>
                            <div class="text-end">
                                <small class="text-muted">15 Jul 2024</small>
                                <div><span class="badge bg-success">Completada</span></div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <div>
                                <strong>Exámenes de Laboratorio</strong>
                                <small class="text-muted d-block">Resultados disponibles</small>
                            </div>
                            <div class="text-end">
                                <small class="text-muted">10 Jul 2024</small>
                                <div><span class="badge bg-info">Ver Resultados</span></div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <a href="/Patient/MedicalHistory" class="btn btn-outline-dark">
                            <i class="bi bi-folder2-open me-2"></i>Ver Historial Completo
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-lg h-100">
                <div class="card-header bg-transparent border-0 py-3">
                    <h6 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-person-gear me-2 text-secondary"></i>
                        Mi Perfil
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="bg-secondary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi bi-person fs-2 text-secondary"></i>
                        </div>
                    </div>
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between px-0 py-2 border-0">
                            <small class="text-muted">Edad:</small>
                            <small class="fw-bold">32 años</small>
                        </div>
                        <div class="list-group-item d-flex justify-content-between px-0 py-2 border-0">
                            <small class="text-muted">Tipo de sangre:</small>
                            <small class="fw-bold">O+</small>
                        </div>
                        <div class="list-group-item d-flex justify-content-between px-0 py-2 border-0">
                            <small class="text-muted">EPS:</small>
                            <small class="fw-bold">Sanitas</small>
                        </div>
                    </div>
                    <div class="d-grid mt-3">
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-secondary btn-sm">
                            <i class="bi bi-gear me-1"></i>Editar Perfil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Appointments Section -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold text-dark">
                            <i class="bi bi-calendar-week me-2" style="color: #134e4a;"></i>
                            Próximas Citas
                        </h5>
                        <a asp-page="/Appointments/Index" class="btn btn-sm btn-outline-primary">Ver Todas</a>
                    </div>
                </div>
                <div class="card-body">
                    <div id="upcomingAppointmentsList">
                        <div class="text-center py-4">
                            <i class="bi bi-calendar-x fs-1 text-muted"></i>
                            <p class="text-muted mt-2">No hay citas programadas</p>
                            <a asp-page="/Appointments/Create" class="btn btn-sm" style="background: #134e4a; color: white;">
                                <i class="bi bi-plus-circle me-1"></i>Agendar Primera Cita
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Card hover effects */
.card:hover {
    transform: translateY(-3px);
    box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
}

.card {
    transition: all 0.3s ease;
}

/* Button hover effects */
.btn {
    transition: all 0.3s ease;
}

.btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15);
}

/* Badge styling */
.badge {
    font-size: 0.75rem;
    padding: 0.5rem 0.75rem;
}

/* List styling */
.list-group-item {
    background: transparent !important;
}
</style>

@section Scripts {
    <script>
        // Load patient dashboard data
        document.addEventListener('DOMContentLoaded', function() {
            loadPatientDashboardData();
        });

        function loadPatientDashboardData() {
            // Simulate loading patient data
            setTimeout(function() {
                // Update next appointment
                document.getElementById('nextAppointmentDetails').innerHTML = `
                    <h6 class="mb-1 fw-bold" style="color: #134e4a;">Mañana, 15 Jul - 10:00 AM</h6>
                    <p class="mb-1">Dr. María González - Consulta General</p>
                    <small class="text-muted">Consultorio 201, 2do Piso</small>
                `;
                
                // Update counters
                document.getElementById('patientPrescriptionsCount').textContent = '3';
                document.getElementById('activeRemindersCount').textContent = '2';
                
                // Update upcoming appointments
                const appointmentsList = document.getElementById('upcomingAppointmentsList');
                appointmentsList.innerHTML = `
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <div class="me-3">
                                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        <i class="bi bi-calendar-event text-primary"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 fw-bold">Consulta General</h6>
                                    <small class="text-muted">Mañana 10:00 AM</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <div class="me-3">
                                    <div class="bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        <i class="bi bi-heart-pulse text-success"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 fw-bold">Cardiología</h6>
                                    <small class="text-muted">20 Jul 2:00 PM</small>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }, 1000);
        }
    </script>
} 
