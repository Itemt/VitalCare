@page "{id:int?}"
@model CitasEPS.Pages.UserDashboards.Doctor.DeletePrescriptionModel

@{
    ViewData["Title"] = "Eliminar Prescripción";
}

<h1><i class="bi bi-trash3"></i> @ViewData["Title"]</h1>

<h3 class="text-danger">¿Está seguro que desea eliminar esta prescripción?</h3>

@if (Model.Prescription != null)
{
<div>
    <h4>Prescripción</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Cita ID
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Prescription.AppointmentId)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Prescription.Medication)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Prescription.Medication.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Prescription.Dosage)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Prescription.Dosage)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Prescription.Instructions)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Prescription.Instructions)
        </dd>
         <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Prescription.PrescriptionDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Prescription.PrescriptionDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Prescription.Id" />
         <button type="submit" class="btn btn-danger me-2"><i class="bi bi-trash3"></i> Eliminar Definitivamente</button>
        <a asp-page="/Appointments/Details" asp-route-id="@Model.OriginalAppointmentId" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
    </form>
</div>
}
else
{
     <div class="alert alert-warning">No se pudo cargar la información de la prescripción a eliminar.</div>
     <a asp-page="/Doctor/Agenda" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Volver a la Agenda</a>
} 
