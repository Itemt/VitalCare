@page
@model CitasEPS.Pages.UserDashboards.Doctor.DoctorIndexModel
@using Microsoft.AspNetCore.Identity
@using CitasEPS.Models
@inject SignInManager<User> UserManagerAccessor
@inject UserManager<User> AspNetUserManager

@{
    ViewData["Title"] = "Portal Médico - VitalCare";
    var currentUser = await AspNetUserManager.GetUserAsync(User);
    var userFirstName = currentUser?.FirstName;
}

@section Styles {
    <link rel="stylesheet" href="~/css/modules/doctor/doctor-dashboard.css" />
}

<!-- Compact Hero Section for Doctor -->
<div class="container-fluid bg-gradient-primary text-white text-center py-4 mb-4" style="background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 50%, #1d4ed8 100%); border-radius: 0 0 1.5rem 1.5rem;">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-2">
                    <i class="bi bi-clipboard-pulse me-2"></i>
                    @if (!string.IsNullOrEmpty(userFirstName))
                    {
                        <span>Bienvenido, Dr(a). <strong>@userFirstName</strong></span>
                    }
                    else
                    {
                        <span>Portal Médico</span>
                    }
                </h1>
                <p class="lead mb-0 opacity-90">Gestión profesional de pacientes - VitalCare IPS</p>
            </div>
        </div>
    </div>
</div>

<!-- Main Dashboard Content -->
<div class="container py-4" style="background-color: white;">
    
    <!-- Today's Overview Row -->
    <div class="row g-4 mb-5">
        <!-- Today's Schedule -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg" style="background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%); border-left: 5px solid #1e40af !important;">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title text-dark fw-bold mb-0">
                            <i class="bi bi-calendar-week me-2" style="color: #1e40af;"></i>
                            Agenda de Hoy
                        </h5>
                        <a asp-page="/UserDashboards/Doctor/Agenda" class="btn btn-primary">
                            <i class="bi bi-calendar-check me-1"></i>Ver Agenda Completa
                        </a>
                    </div>
                    <div id="todaySchedule">
                        <div class="text-center py-3">
                            <i class="bi bi-clock fs-3 text-muted"></i>
                            <p class="text-muted mt-2">Cargando agenda del día...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="col-lg-4">
            <div class="row g-3">
                <div class="col-12">
                    <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #134e4a 0%, #065f46 100%);">
                        <div class="card-body text-center p-3 text-white">
                            <h4 class="fw-bold mb-1">@Model.TodayAppointments</h4>
                            <small class="opacity-90">Citas Hoy</small>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);">
                        <div class="card-body text-center p-3">
                            <h5 class="fw-bold text-success mb-1">@Model.ConfirmedAppointments</h5>
                            <small class="text-muted">Confirmadas</small>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);">
                        <div class="card-body text-center p-3">
                            <h5 class="fw-bold text-warning mb-1">@Model.SatisfactionPercentage%</h5>
                            <small class="text-muted">Satisfacción</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Tools Row -->
    <div class="row g-4 mb-5">
        <!-- Patient Management -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg h-100">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-people me-2" style="color: #134e4a;"></i>
                        Gestión de Pacientes
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Patient Search -->
                    <div class="mb-4">
                        <form id="doctorPatientSearchForm" class="d-flex">
                            <input type="text" id="doctorPatientSearchInput" class="form-control me-2" placeholder="Buscar paciente por nombre, cédula...">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>
                    </div>
                    
                    <!-- Quick Actions */
                    <div class="row g-2">
                        <div class="col-6">
                            <a asp-page="/UserDashboards/Doctor/Patients" class="btn btn-outline-success w-100 btn-sm">
                                <i class="bi bi-person-lines-fill me-1"></i>
                                Ver Pacientes
                            </a>
                        </div>
                        <div class="col-6">
                            <a asp-page="/UserDashboards/Doctor/PatientHistory" class="btn btn-outline-secondary w-100 btn-sm">
                                <i class="bi bi-journal-medical me-1"></i>
                                Historiales
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Medical Tools -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg h-100">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-file-earmark-medical me-2 text-warning"></i>
                        Herramientas Médicas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-page="/UserDashboards/Doctor/Prescriptions" class="btn btn-warning">
                            <i class="bi bi-prescription2 me-2"></i>
                            Gestionar Prescripciones (@Model.TotalPrescriptions)
                        </a>
                        <div class="row g-2">
                            <div class="col-6">
                                <a asp-page="/UserDashboards/Doctor/MyRatings" class="btn btn-outline-info w-100 btn-sm">
                                    <i class="bi bi-star me-1"></i>
                                    Calificaciones
                                </a>
                            </div>
                            <div class="col-6">
                                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-outline-dark w-100 btn-sm">
                                    <i class="bi bi-gear me-1"></i>
                                    Mi Perfil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Prescriptions & Performance -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-transparent border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold text-dark">
                            <i class="bi bi-clock-history me-2" style="color: #134e4a;"></i>
                            Actividad Reciente
                        </h5>
                        <small class="text-muted">Últimas 24 horas</small>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.RecentPrescriptions != null && Model.RecentPrescriptions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-borderless">
                                <tbody>
                                    @foreach (var prescription in Model.RecentPrescriptions.Take(5))
                                    {
                                        <tr>
                                            <td class="py-2">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                                        <i class="bi bi-prescription2 text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <strong class="d-block">@prescription.Medication?.Name</strong>
                                                        <small class="text-muted">@prescription.Patient?.FullName</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-2 text-end">
                                                <span class="badge bg-success">@prescription.Dosage</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-prescription2 fs-3 text-muted"></i>
                            <p class="text-muted mt-2">No hay prescripciones recientes</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-lg h-100">
                <div class="card-header bg-transparent border-0 py-3">
                    <h6 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-graph-up me-2 text-success"></i>
                        Rendimiento
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <small class="text-muted">Citas Completadas</small>
                            <small class="fw-bold">95%</small>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar" style="width: 95%; background: #134e4a;"></div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <small class="text-muted">Satisfacción Pacientes</small>
                            <small class="fw-bold">@Model.SatisfactionPercentage%</small>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-warning" style="width: @Model.SatisfactionPercentage%;"></div>
                        </div>
                    </div>
                    
                    <div class="text-center mt-3">
                        <span class="badge bg-success">⭐ Doctor Destacado</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Appointments -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold text-dark">
                            <i class="bi bi-calendar-event me-2" style="color: #1e40af;"></i>
                            Próximas Citas
                        </h5>
                        <a asp-page="/UserDashboards/Doctor/Agenda" class="btn btn-sm btn-outline-primary">Ver Agenda</a>
                    </div>
                </div>
                <div class="card-body">
                    <div id="upcomingAppointmentsList">
                        <div class="text-center py-4">
                            <i class="bi bi-calendar-check fs-1 text-muted"></i>
                            <p class="text-muted mt-2">Cargando próximas citas...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Card hover effects */
.card:hover {
    transform: translateY(-3px);
    box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
}

.card {
    transition: all 0.3s ease;
}

/* Button hover effects */
.btn {
    transition: all 0.3s ease;
}

.btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15);
}

/* Progress bar styling */
.progress {
    border-radius: 10px;
    background-color: #e9ecef;
}

.progress-bar {
    border-radius: 10px;
}

/* Table styling */
.table-borderless td {
    border: none;
}

/* Badge styling */
.badge {
    font-size: 0.75rem;
    padding: 0.4rem 0.6rem;
}
</style>

@section Scripts {
    <script>
        // Doctor dashboard functionality
        document.addEventListener('DOMContentLoaded', function() {
            initializeDoctorDashboard();
            loadDoctorDashboardData();
        });

        function initializeDoctorDashboard() {
            // Patient search functionality
            const searchForm = document.getElementById('doctorPatientSearchForm');
            const searchInput = document.getElementById('doctorPatientSearchInput');

            if (searchForm) {
                searchForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const searchTerm = searchInput.value.trim();
                    if (searchTerm) {
                        // Redirect to patients page with search term
                        window.location.href = `/UserDashboards/Doctor/Patients?search=${encodeURIComponent(searchTerm)}`;
                    }
                });
            }

            // Add keyboard shortcut for search (Ctrl+F)
            document.addEventListener('keydown', function(e) {
                if (e.ctrlKey && e.key === 'f') {
                    e.preventDefault();
                    searchInput.focus();
                }
            });
        }
        
        function loadDoctorDashboardData() {
            // Simulate loading doctor data
            setTimeout(function() {
                // Update today's schedule
                document.getElementById('todaySchedule').innerHTML = `
                    <div class="row g-2">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-2 bg-white rounded">
                                <div class="me-2">
                                    <small class="text-primary fw-bold">10:00</small>
                                </div>
                                <div>
                                    <small class="fw-bold d-block">Juan Pérez</small>
                                    <small class="text-muted">Consulta General</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-2 bg-white rounded">
                                <div class="me-2">
                                    <small class="text-warning fw-bold">14:30</small>
                                </div>
                                <div>
                                    <small class="fw-bold d-block">Ana García</small>
                                    <small class="text-muted">Control</small>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                // Update upcoming appointments
                document.getElementById('upcomingAppointmentsList').innerHTML = `
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <div class="me-3">
                                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        <i class="bi bi-calendar-event text-primary"></i>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="mb-1 fw-bold">Carlos Ruiz</h6>
                                    <small class="text-muted">Mañana 9:00 AM</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <div class="me-3">
                                    <div class="bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        <i class="bi bi-heart-pulse text-success"></i>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="mb-1 fw-bold">María López</h6>
                                    <small class="text-muted">Mañana 11:30 AM</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <div class="me-3">
                                    <div class="bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        <i class="bi bi-clipboard-check text-warning"></i>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="mb-1 fw-bold">Luis Martín</h6>
                                    <small class="text-muted">Mañana 3:00 PM</small>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }, 1000);
        }
    </script>
} 
