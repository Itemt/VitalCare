@page "{id:int}"
@model CitasEPS.Pages.Doctor.ProposeDoctorRescheduleModel
@{
    ViewData["Title"] = "Proponer Nuevo Horario";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="alert alert-info">
    Est√° proponiendo un nuevo horario para la cita con: <strong>@Model.PatientName</strong>.<br />
    Fecha y hora actual: <strong>@Model.CurrentDateTime</strong>.
</div>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" /> @* Pass appointment ID back *@

            <div class="form-group mb-3">
                <label asp-for="Input.ProposedNewDateTime" class="control-label"></label>
                <input asp-for="Input.ProposedNewDateTime" class="form-control datetimepicker" type="text" />
                <span asp-validation-for="Input.ProposedNewDateTime" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send"></i> Enviar Propuesta al Paciente
                </button>
                <a asp-page="./Agenda" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        @* Placeholder for patient availability/calendar? Might be complex. *@
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 