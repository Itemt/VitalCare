@page
@model CitasEPS.Pages.Admin.ManageSpecialtiesModel
@{
    ViewData["Title"] = "Gestionar Especialidades";
}

<h1 class="display-4"><i class="bi bi-star-fill"></i> @ViewData["Title"]</h1>

<p>
    <a asp-page="./Specialties/Create" class="btn btn-success mb-3"><i class="bi bi-plus-circle"></i> Crear Nueva Especialidad</a>
</p>

@if (!Model.Specialties.Any())
{
    <div class="alert alert-info" role="alert">
        No hay especialidades m√©dicas registradas.
    </div>
}
else
{
    <table class="table table-striped table-hover table-sm">
        <thead class="table-primary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Specialties[0].Name)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Specialties)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-page="./Specialties/Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Editar"><i class="bi bi-pencil-square"></i></a>
                    <a asp-page="./Specialties/Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}