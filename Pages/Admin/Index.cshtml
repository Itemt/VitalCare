@page
@model CitasEPS.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Panel de Administración";
}

<h1 class="display-4">Panel de Administración</h1>

<p>Bienvenido al panel de administración de VitalCare.</p>

@* Contenido futuro del dashboard aquí *@
<div class="row mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Gestionar Médicos</h5>
                <p class="card-text">Añadir, editar o eliminar médicos.</p>
                <a asp-page="/Admin/ManageDoctors" class="btn btn-primary">Ir</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Gestionar Especialidades</h5>
                <p class="card-text">Añadir o editar especialidades médicas.</p>
                <a asp-page="/Admin/ManageSpecialties" class="btn btn-primary">Ir</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Gestionar Citas</h5>
                <p class="card-text">Ver y administrar todas las citas del sistema.</p>
                <a asp-page="/Admin/ManageAppointments" class="btn btn-primary">Ir</a>
            </div>
        </div>
    </div>
</div> 