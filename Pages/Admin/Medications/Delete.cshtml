@page "{id:int}"
@model CitasEPS.Pages.Admin.Medications.DeleteModel

@{
    ViewData["Title"] = "Eliminar Medicamento";
    Layout = "~/Pages/Shared/_Layout.cshtml"; // Ensure this points to the correct main layout
}

<h1><i class="bi bi-trash3-fill text-danger"></i> @ViewData["Title"]</h1>

<h3 class="text-danger">¿Está seguro que desea eliminar este medicamento?</h3>
<div>
    <h4>Medicamento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Medication.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Medication.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Medication.Description)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Medication.Description)
        </dd>
    </dl>
    
    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
    {
        <div class="alert alert-danger">
             @foreach (var error in ViewData.ModelState[string.Empty].Errors)
            {
                <span>@error.ErrorMessage</span><br />
            }
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="Medication.Id" />
        <button type="submit" class="btn btn-danger me-2"><i class="bi bi-trash3"></i> Eliminar</button>
        <a asp-page="./Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
    </form>
</div> 