@page "{id:int}"
@model CitasEPS.Pages.Admin.Users.DeleteModel

@{ 
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Pages/Shared/_Layout.cshtml"; 
}

<h1><i class="bi bi-trash3-fill text-danger"></i> @ViewData["Title"]</h1>

<h3 class="text-danger">¿Está seguro que desea eliminar este usuario permanentemente?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Input.UserName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Input.UserName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Input.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Input.Email)
        </dd>
         <dt class="col-sm-3">
            Roles
        </dt>
        <dd class="col-sm-9">
            @string.Join(", ", Model.UserRoles)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Input.Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button> |
        <a asp-page="../ManageUsers" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
