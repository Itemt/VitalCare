@page
@model CitasEPS.Pages.Admin.Doctors.CreateModel

@{ 
    ViewData["Title"] = "Crear Nuevo Médico";
    Layout = "~/Pages/Shared/_Layout.cshtml"; 
}

<h1><i class="bi bi-person-plus-fill"></i> @ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Doctor.UserId" class="control-label fw-bold">Cuenta de Usuario a Vincular</label>
                <select asp-for="Doctor.UserId" class="form-select" asp-items="Model.UserSL">
                    <option value="">-- Seleccione un Usuario --</option>
                </select>
                <span asp-validation-for="Doctor.UserId" class="text-danger"></span>
            </div>

             <div class="form-group mb-3">
                <label asp-for="Doctor.FirstName" class="control-label"></label>
                <input asp-for="Doctor.FirstName" class="form-control" />
                <span asp-validation-for="Doctor.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Doctor.LastName" class="control-label"></label>
                <input asp-for="Doctor.LastName" class="form-control" />
                <span asp-validation-for="Doctor.LastName" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="Doctor.SpecialtyId" class="control-label"></label>
                <select asp-for="Doctor.SpecialtyId" class="form-select" asp-items="Model.SpecialtySL">
                    <option value="">-- Seleccione Especialidad --</option>
                </select>
                <span asp-validation-for="Doctor.SpecialtyId" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="Doctor.MedicalLicenseNumber" class="control-label"></label>
                <input asp-for="Doctor.MedicalLicenseNumber" class="form-control" />
                <span asp-validation-for="Doctor.MedicalLicenseNumber" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Médico</button>
                <a asp-page="../ManageDoctors" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
