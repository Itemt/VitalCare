@page
@model CitasEPS.Pages.Admin.ManagePatientsModel

@{ 
    ViewData["Title"] = "Gestionar Pacientes";
}

<h2><i class="bi bi-person-lines-fill"></i> @ViewData["Title"]</h2>

@* Optional: Add a button to create new patients? *@
@* <p>
    <a asp-page="CreatePatient" class="btn btn-primary disabled">Crear Nuevo Paciente (No implementado)</a>
</p> *@

@if (!Model.Patients.Any())
{
    <div class="alert alert-info" role="alert">
        No hay pacientes registrados en el sistema.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Patients[0].FullName) @* Using FullName property if available *@
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Patients[0].DocumentId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patients[0].Email)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Patients[0].PhoneNumber)
                </th>
                <th>Acciones</th> @* Placeholder for future actions *@
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Patients)
    {           <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName) @* Display FullName *@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentId)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @* Placeholder for Edit/Delete/View Details links/buttons *@
                    <a asp-page="#" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary disabled" title="Editar (No implementado)"><i class="bi bi-pencil"></i></a>
                    <a asp-page="#" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger disabled" title="Eliminar (No implementado)"><i class="bi bi-trash"></i></a>
                    <a asp-page="#" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info disabled" title="Detalles (No implementado)"><i class="bi bi-info-circle"></i></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
} 