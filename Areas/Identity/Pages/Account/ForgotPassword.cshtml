@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h1 class="card-title text-center h3 mb-4">@ViewData["Title"]</h1>
                    <h2 class="text-center h5 mb-3 fw-normal">Ingresa tu correo electrónico.</h2>
                    <hr class="mb-4"/>
                    
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
                            <label asp-for="Input.Email" class="form-label">Correo Electrónico</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-lg btn-primary">Restablecer Contraseña</button>
                        </div>
                         <div class="text-center mt-3"> @* Added for back link *@
                             <a asp-page="./Login">Volver a Iniciar Sesión</a>
                         </div>
                    </form>
                </div> @* End card-body *@
            </div> @* End card *@
        </div> @* End column *@
    </div> @* End row *@
</div> @* End container *@


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
