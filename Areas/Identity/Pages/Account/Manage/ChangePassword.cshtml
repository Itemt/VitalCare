@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    var cardHeaderClass = "bg-vitalcare-doctor text-white text-center"; // Consistent dark blue header
    if (User.IsInRole("Paciente")) { cardHeaderClass = "bg-success text-white text-center"; } // Green for patient
}

<div class="row justify-content-center">
    <div class="col-md-3">
        <partial name="_ManageNav" />
    </div>
    <div class="col-md-9">
        <div class="card shadow-sm">
            <div class="card-header @cardHeaderClass">
                <h3 class="mb-0 text-white text-shadow-custom"><i class="bi bi-key-fill"></i> @ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <partial name="_StatusMessage" for="StatusMessage" />
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Contraseña actual" />
                        <label asp-for="Input.OldPassword" class="form-label"></label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nueva contraseña" />
                        <label asp-for="Input.NewPassword" class="form-label"></label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmar nueva contraseña"/>
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="card-footer bg-transparent text-end mt-4 px-0"> <!-- Made footer transparent and removed padding -->
                        <button type="submit" class="btn btn-vitalcare-dark"><i class="bi bi-shield-lock-fill"></i> Actualizar Contraseña</button>
                    </div>
                </form>
            </div> @* End card-body *@
        </div> @* End card *@
    </div> @* End col for content *@
</div> @* End row *@

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
